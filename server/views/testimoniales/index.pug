extends ../layout/index
block contenido
    main.container.mt-5
       h1.text-center.mb-5 #{pagina}


       .row
            .col-md-12
                include ../layout/partials/testimoniales
                
            .col-md-12
                h2.text-center Agrega un Testimonio
                if(errores)
                    each error in errores   
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action='/testimoniales', method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre",type="text",class="form-control", placeholder="Ingres치 tu nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") e-Mail
                                input(id="correo",type="email",class="form-control", placeholder="Ingres치 tu correo elcetr칩nico", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3",class="form-control", placeholder="Ingres치 tu mensaje")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")